{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "esModuleInterop": true,
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "/@/*": ["./src/*"],
      "_/*": ["./src/*"],
      "_common/*": ["../common/*"],
    }
  },
  "include": ["src/**/*.ts", "../../types/**/*.d.ts", "src/index.ts"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
